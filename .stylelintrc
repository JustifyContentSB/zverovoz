{
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-clean-order"
  ],
  "rules": {
      "rule-empty-line-before": [
        "always",
        {
          "except": ["first-nested"],
          "ignore": ["after-comment"]
        }
      ],
      "no-descending-specificity": null,
      "order/order": [
        "declarations",
        "at-rules"
      ]
  }
}
